<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/resultFragmentLayout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firstNumberLabel"
        android:layout_width="136dp"
        android:layout_height="18dp"
        android:layout_marginStart="220dp"
        android:text="Enter First Number"
        app:layout_constraintBaseline_toBaselineOf="@+id/firstNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/firstNumber"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/firstNumberLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:text="Enter Second Number"
        app:layout_constraintBaseline_toBaselineOf="@+id/secondNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/secondNumber"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/secondNumberLabel"
        app:layout_constraintTop_toBottomOf="@+id/firstNumber" />

    <Button
        android:id="@+id/performCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondNumberLabel" />

    <TextView
        android:id="@+id/displayResult"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/performCalculation" />

</androidx.constraintlayout.widget.ConstraintLayout>