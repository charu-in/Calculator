<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/resultFragmentLayout"
    tools:context=".MainActivity">

    <!-- Enter first Number for operation to be performed -->

    <!-- Enter second Number for operation to be performed -->

    <!-- perform operation upon button click and display the result in TextView -->
    <!-- button to perform selected operation from the MainActivity -->

    <!-- display the result in TextView -->

    <TextView
        android:id="@+id/firstNumberLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enter first number"
        app:layout_constraintBaseline_toBaselineOf="@+id/secondNumber"
        app:layout_constraintEnd_toStartOf="@+id/secondNumber"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/firstNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:width="100dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondNumber" />

    <TextView
        android:id="@+id/secondNumberLabel"
        android:layout_width="202dp"
        android:layout_height="20dp"
        android:text="Enter second number"
        app:layout_constraintBaseline_toBaselineOf="@+id/firstNumber"
        app:layout_constraintEnd_toStartOf="@+id/firstNumber"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/secondNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="128dp"
        android:width="100dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/performCalculation"
        android:layout_width="199dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondNumberLabel" />

    <TextView
        android:id="@+id/displayResult"
        android:layout_width="172dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/performCalculation" />

</androidx.constraintlayout.widget.ConstraintLayout>