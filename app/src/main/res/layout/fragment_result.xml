<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Enter first Number for operation to be performed -->
    <LinearLayout
        android:id="@+id/enterFirstNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="Enter first number" />

        <EditText
            android:id="@+id/firstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:inputType="number" />
    </LinearLayout>

    <!-- Enter second Number for operation to be performed -->
    <LinearLayout
        android:id="@+id/enterSecondNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterFirstNumber"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="Enter second number" />

        <EditText
            android:id="@+id/secondNumber"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp" />
    </LinearLayout>

    <!-- perform operation upon button click and display the result in TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterSecondNumber"
        android:orientation="vertical">

        <!-- button to perform selected operation from the MainActivity -->
        <Button
            android:id="@+id/performCalculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp" />

        <!-- display the result in TextView -->
        <TextView
            android:id="@+id/displayResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:height="30dp" />
    </LinearLayout>

</RelativeLayout>